<form id="edit-book-form" method="post" action="/books/{{book.id}}">
  <div class="form-group">
    <label class="form-left" for="book-title">Title</label>
    <input class="book-field" id="book-title" name="book[title]" value="{{book.title}}">
    <br>
  </div>
  <div class="form-group">
    <label class="form-left" for="book-photographer">Photographer</label>
    <input class="book-field" id="book-photographer" name="book[photographer]" value="{{book.photographer}}">
    <br>
  </div>
  <div class="form-group">
    <label class="form-left" for="book-nationality">Nationality</label>
    <input class="book-field" id="book-nationality" name="book[nationality]" value="{{book.nationality}}">
    <br>
  </div>
  <div class="form-group">
    <label class="form-left" for="book-publisher">Publisher</label>
    <input class="book-field" id="book-publisher" name="book[publisher]" value="{{book.publisher}}">
    <br>
  </div>
  <div class="form-group">
    <label class="form-left" for="book-year">Year Published</label>
    <input class="book-field" id="book-year" name="book[year]" value="{{book.year}}">
    <br>
  </div>
  <div class="form-group">
    <label class="form-left" for="book-isbn">ISBN</label>
    <input class="book-field" id="book-isbn" name="book[isbn]" value="{{book.isbn}}">
    <br>
  </div>
  <div class="form-group">
    <label class="form-left" for="book-genre">Genre</label>
    <input class="book-field" id="book-genre" name="book[genre]" value="{{book.genre}}">
    <br>
  </div>
  <div class="form-group">
    <label class="form-left" for="book-type">Type</label>
    <input class="book-field" id="book-type" name="book[type]" value="{{book.type}}">
    <br>
  </div>
  <div class="form-group">
    <label class="form-left" for ="book-textBy">Text By</label>
    <input class="book-field" id="book-textBy" name="book[textby]" value="{{book.textby}}">
    <br>
  </div>
  <div class="form-group">
    <label class="form-left" for="book-tags">Tags</label>
    <input class="book-field" id="book-tags" name="book[tags]" value="{{book.tags}}">
    <br>
  </div>
  <div class="form-group">
    <label class="form-left" for="book-comments">Comments</label>
    <input class="book-field" id="book-comments" name="book[comments]" value="{{book.comments}}">
    <br>
  </div>
